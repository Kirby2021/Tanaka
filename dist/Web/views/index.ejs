<%- include('./partials/_head') %>

<body class="dark-theme github">
	<% if (data === null) { %>
		<section class="fullscreen">
			<div class="background" style="background-image: url('https://i.imgur.com/o7T3fAm.jpg');"></div>
			<div class="center-object center-text">
				<h2 class="bold no-margin">
					<span class="alizarin-text">401</span>
					<br />
					You must login with Discord to continue.
				</h2>
				<div class="buttons">
					<a href="/auth/login" class="btn alizarin-border">Login</a>
					<a href="#" class="btn emerald-border" onclick="window.history.go(-1); return false;">Go
						one step back</a>
				</div>
			</div>
		</section>
	<% } else { %>
		<div class="fullscreen">
			<div class="background" style="background-image: url('https://i.imgur.com/KAPJqD9.jpg');">
			</div>
			<div class="center-object">
				<div class="container">
					<section class="me unset">
						<div class="avatar-container">
							<img draggable="false"
								src="https://i.imgur.com/Ih18zrt.png"
								class="image-title"
								alt="background" />
						</div>
						<div class="unset">
							<h1 class="title monospace">Tanaka</h1>
							<p class="undertitle monospace"><i class="emoji sharingan"></i> An all
							fun and games bot.</p>
						</div>
					</section>
					<div class="buttons">
						<a href="/discord"
							class="btn discord-dropshadow animation hover"
							target="_blank">Discord</a>
						<a href="/github"
							class="btn github-dropshadow animation hover" target="_blank">Github</a>
						<a href="/invite"
							class="btn lavender-dropshadow animation hover"
							target="_blank">Invite</a>
						<a href="/commands"
							class="btn honey-dropshadow animation hover"
							target="_blank">Commands</a>
					</div>
				</div>

				<div class="box-container center" style="position: absolute; top: 0px; vertical-align: middle;">
					<a href="/" target="_blank" class="asbestos-text btn" style="padding: 0 .4em;">Home</a>
					<a href="/commands" target="_blank" class="asbestos-text btn" style="padding: 0 .4em;">Commands</a>
					<a href="/github" target="_blank" class="asbestos-text btn" style="padding: 0 .4em;">Repository</a>
					<a href="/profile" target="_blank" ">
						<img src="<%= data.avatarURL({ size: 64, dynamic: true });%>" style="width: 105px; max-width: 105px; height: auto; vertical-align: middle; padding: 0 .4em;" alt="avatar" />
					</a>
					<a href="/legal" target="_blank" class="asbestos-text btn" style="padding: 0 .4em;">Legal</a>
					<a href="/discord" target="_blank" class="asbestos-text btn" style="padding: 0 .4em;">Support</a>
					<a href="/auth/logout" target="_blank" class="asbestos-text btn" style="padding: 0 .4em;">Log Out</a>
				</div>
			</div>

			<span class="info-button" onclick="scroll_To('information')">
				<div id="fade" class="arrow bounce">
					<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 481.32 291.98" class="white-fill">
						<path
							d="M466.5,15.5L466,15c-19.8-19.8-52-19.8-71.9,0L240.8,168.3L87.2,14.8C67.4-5,35.2-5,15.4,14.8l-0.5,0.5 C-5,35.2-5,67.4,14.8,87.2l186.6,186.6c0.9,1,1.8,2,2.7,3v0c3.8,3.8,8.1,6.9,12.7,9.3c17,9,38.1,7.7,53.9-3.9 c2.2-1.6,4.4-3.4,6.4-5.4L466.5,87.4C486.4,67.6,486.4,35.4,466.5,15.5z" />
					</svg>
				</div>
			</span>
		</div>

		<section class="container" id="information">
			<div class="box-container">
				<h1 class="title turquoise-text"><i class="emoji naruto-run"></i> Information:</h1>
				<div class="info-container">
					<p>
						Tanaka is a Discord Bot coded in <a href="https://javascript.info"
							target="_blank">JavaScript</a> with <a href="https://discord.js.org"
							target="_blank">discord.js</a> using the <a
							href="https://github.com/discordjs/Commando"
							target="_blank">Commando</a> framework.
					</p>
				</div>
			</div>

			<div class="box-container">
				<h1 class="title turquoise-text"><i class="emoji konoha"></i> Statistics:</h1>
				<div class="info-container">
					<p><span class="gold-text">Users:</span> <%= userCount %></p>
					<p><span class="android-text">Guilds:</span> <%= guildCount %></p>
					<p><span class="gitlab-text">Channels:</span> <%= channelCount %></p>
					<p><span class="wisteria-text">Commands:</span> <%= commandCount %></p>
					<p><span class="pinewood-text">Shards:</span> <%= shardCount %></p>
					<p><span class="blurple-text">Ping:</span> <code><%= ping %>ms</code></p>
				</div>
			</div>
		</section>

		<%- include('./partials/_footer') %> 
	<% } %>
</body>